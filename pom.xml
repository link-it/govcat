	<name>govcat</name>
	<description>progetto govcat</description>


	<profiles>
		<profile>
			<id>default</id>
			<activation>
				<property>
					<name>!plugin.artifactId</name>
				</property>
			</activation>

			<properties>
				<web.warName>govcat-web</web.warName>
				<api.warName>govcat-api</api.warName>
				<batch.warName>govcat-batch</batch.warName>
			</properties>

			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-resources-plugin</artifactId>
						<version>${maven.resources.plugin.version}</version>
						<inherited>true</inherited>
						<executions>
							<execution>
								<id>copy-default-resources</id>
								<phase>validate</phase>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<configuration>
									<outputDirectory>
										${project.build.directory}/plugin</outputDirectory>
									<buildFilters>
										<buildFilter></buildFilter>
									</buildFilters>
									<resources>
										<resource>
											<filtering>false</filtering>
											<directory>${default.plugin.dir}</directory>
											<includes>
												<include>*/**</include>
											</includes>
										</resource>
									</resources>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>custom_plugin</id>

			<activation>
				<property>
					<name>plugin.artifactId</name>
				</property>
			</activation>

			<properties>
				<plugin.groupId>${groupId}</plugin.groupId>
				<plugin.version>${version}</plugin.version>
			</properties>

			<dependencies>
				<dependency>
					<groupId>${plugin.groupId}</groupId>
					<artifactId>${plugin.artifactId}</artifactId>
					<version>${plugin.version}</version>
				</dependency>
			</dependencies>

			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<version>${maven.dependency.plugin.version}</version>
						<inherited>true</inherited>
						<executions>
							<execution>
								<id>unpack-customer</id>
								<phase>validate</phase>
								<goals>
									<goal>unpack-dependencies</goal>
								</goals>
								<configuration>
									<includeGroupIds>${plugin.groupId}</includeGroupIds>
									<includeArtifactIds>${plugin.artifactId}</includeArtifactIds>
									<excludeTransitive>true</excludeTransitive>
									<outputDirectory>
										${project.build.directory}/plugin</outputDirectory>
									<includes>
										filters/**,plugin/**,customer.properties
									</includes>
									<overWriteReleases>true</overWriteReleases>
									<overWriteSnapshots>true</overWriteSnapshots>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>properties-maven-plugin</artifactId>
						<version>${maven.properties.plugin.version}</version>
						<inherited>true</inherited>
						<executions>
							<execution>
								<id>extract-customer-properties</id>
								<phase>validate</phase>
								<goals>
									<goal>read-project-properties</goal>
								</goals>
								<configuration>
									<files>
										<file>
											${project.build.directory}/plugin/customer.properties</file>
									</files>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

